#ifndef _OSGGIS_FEATURECURSORIMPL_H_
#define _OSGGIS_FEATURECURSORIMPL_H_

#include <osgGIS/FeatureStore>

namespace osgGIS
{
    /**
     * Simple feature cursor implementation that uses a list of OIDs
     * to iterate over a feature store.
     *
     * to be deprecated
     */
    class FeatureCursorImpl : public FeatureCursor
    {
    public:
        FeatureCursorImpl( 
            const FeatureOIDList& oids,
            FeatureStore*         store );

    public:
        virtual ~FeatureCursorImpl();

    public: // FeatureCursor interface

        void reset();
        
        bool hasNext() const;

        Feature* next();


    private:
        FeatureOIDList             oids;
        unsigned int               iter;
        osg::ref_ptr<FeatureStore> store;
        osg::ref_ptr<Feature>      last_result;
    };
}

#endif // _OSGGIS_FEATURECURSORIMPL_H_
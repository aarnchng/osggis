#ifndef _OSGGIS_AUTO_RESET_EVENT_H_
#define _OSGGIS_AUTO_RESET_EVENT_H_ 1

#include <osgGIS/Common>
//#include <OpenThreads/Block>
#include <OpenThreads/Mutex>
#include <OpenThreads/Condition>
#include <OpenThreads/ScopedLock>

namespace osgGIS
{
    /**
     * Adds a method to the Block class to release a block and automatically
     * reset the state to non-released. This simluates the .NET AutoResetEvent
     * behavior.
     */
    class AutoResetBlock // : public OpenThreads::Block
    {
    public:
        AutoResetBlock() // : Block()
        { 
            signal_count = 0;
        }

        inline bool block()
        {
            OpenThreads::ScopedLock<OpenThreads::Mutex> mutlock( mut );
            bool result = true;
            if ( signal_count == 0 ) {
                result = cond.wait( &mut ) == 0;
            }
            signal_count--;
            return result;
        }

        inline bool block( unsigned long timeout )
        {
            OpenThreads::ScopedLock<OpenThreads::Mutex> mutlock( mut );
            bool result = true;
            if ( signal_count == 0 ) {
                result = cond.wait( &mut, timeout ) == 0;
            }
            if ( result )
                signal_count--;
            return result;
        }
        
        inline void signal() {
            OpenThreads::ScopedLock<OpenThreads::Mutex> mutlock( mut );
            signal_count++;
            cond.broadcast();
        }
        
    private:
        int signal_count;
        OpenThreads::Mutex mut;
        OpenThreads::Condition cond;
    };
}

#endif _OSGGIS_AUTO_RESET_EVENT_H_
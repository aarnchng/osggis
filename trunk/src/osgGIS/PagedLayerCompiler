#ifndef _OSGGIS_PAGED_LAYER_COMPILER_H_
#define _OSGGIS_PAGED_LAYER_COMPILER_H_ 1

#include <osgGIS/Common>
#include <osgGIS/FeatureLayer>
#include <osgGIS/Script>
#include <osg/Node>
#include <string>

namespace osgGIS
{
    /**
     * Compiles a feature layer against a PagedLOD terrain that was
     * generated by VirtualPlanerBuilder/osgdem. This compiler will
     * traverse the source terrain. For each tile it finds, it 
     * will run the provided script to create a corresponding vector
     * tile matching the extents and LOD range of the terrain tile. It
     * will write the output tiles to disk.
     */
    class OSGGIS_EXPORT PagedLayerCompiler
    {
    public:
        /**
         * Constructs a new paged layer compiler.
         */
        PagedLayerCompiler();

        /**
         * Compiles a feature layer against a reference terrain and
         * returns the root node.
         *
         * @param layer
         *      Feature layer to compile
         * @param script
         *      Script to use to compile each tile
         * @param terrain 
         *      Reference terrain against which to compile geometry
         * @param terrain_extent 
         *      Spatial extent of reference terrain
         * @param min_level 
         *      Minimum (farthest) PagedLOD level for which to generate geometry
         * @param max_level 
         *      Maximum (nearest) PagedLOD level for which to generate geometry
         * @param prioirity_offset
         *      Sets the PagedLOD priority offset value for vectors, so as to 
         *      force them to page in just before or just after the corresponding
         *      terrain tile
         * @param output_file
         *      File to which to write root level output node. All other subtile
         *      nodes will be written to the same directory.
         */
        osg::Node* compile( 
            FeatureLayer*      layer,
            Script*            script,
            osg::Node*         terrain,
            const GeoExtent&   terrain_extent,
            int                min_level,
            int                max_level,
            float              priority_offset,
            const std::string& output_file );

    public:
        virtual ~PagedLayerCompiler();

    };
}


#endif //_OSGGIS_PAGED_LAYER_COMPILER_H_
#ifndef _OSGGIS_DISPERSE_FILTER_STATE_H_
#define _OSGGIS_DISPERSE_FILTER_STATE_H_ 1

#include <osgGIS/Common>
#include <osgGIS/FilterState>
#include <osgGIS/DisperseFilter>
#include <osg/Node>

namespace osgGIS
{
    class DisperseFilterState : public FilterState
    {
    public:
        DisperseFilterState( DisperseFilter* filter );

        bool traverse( FilterEnv* );

        void push( Feature* input );
        void push( const FeatureList& input );
        void push( osg::Drawable* input );
        void push( const DrawableList& input );
        void push( osg::Node* );
        void push( const osg::NodeList& nodes );

    protected:
        osg::ref_ptr<DisperseFilter> filter;
        
        FeatureList features;
        DrawableList drawables;
        osg::NodeList nodes;
    };
}

#endif // _OSGGIS_DISPERSE_FILTER_STATE_H_
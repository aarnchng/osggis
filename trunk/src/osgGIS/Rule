#ifndef _OSGGIS_RULE_H_
#define _OSGGIS_RULE_H_ 1

#include <osgGIS/Common>
#include <osgGIS/Resource>

namespace osgGIS
{
    /**
     * A selector rule that operates on expressions to select a resource
     * or another rule.
     */
    class OSGGIS_EXPORT Rule : public osg::Referenced
    {
    public:
        /**
         * Gets the name of this resource.
         */
        const std::string& getName() const;

        /**
         * Sets the name of this resource.
         */
        void setName( const std::string& name );

    protected:
        Rule();
        Rule( const std::string& name );

        virtual ~Rule();
        
    private:
        std::string name;
    };
}

#endif // _OSGGIS_RESOURCE_H_
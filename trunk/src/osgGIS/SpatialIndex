#ifndef _OSGGIS_SPATIAL_INDEX_H_
#define _OSGGIS_SPATIAL_INDEX_H_ 1

#include <osgGIS/Common>
#include <osgGIS/Feature>
#include <osgGIS/GeoExtent>

namespace osgGIS
{
    /**
     * A interface for performing spatial queries against a FeatureStore.
     */
	class OSGGIS_EXPORT SpatialIndex : public osg::Referenced
	{
	public:
        /**
         * Creates a cursor that will iterate over all the features in
         * a feature store that intersect a spatial area of interest.
         *
         * @param extent
         *      Query area of interest
         */
		virtual FeatureCursor* createCursor( const GeoExtent& extent ) =0;
		
		/**
		 * Gets the full spatial extent of the indexed features.
		 */
	    virtual const GeoExtent& getExtent() const =0;
	};
}

#endif //_OSGGIS_SPATIAL_INDEX_H_
#ifndef _OSGGIS_SKIN_RESOURCE_H_
#define _OSGGIS_SKIN_RESOURCE_H_ 1

#include <osgGIS/Common>
#include <osgGIS/Resource>
#include <osg/Vec4>
#include <osg/StateSet>

namespace osgGIS
{
    /**
     * Defines a feature "skin" - metadata that defines the appearance of a
     * compiled feature.
     */
    class OSGGIS_EXPORT SkinResource : public Resource
    {
        OSGGIS_META_RESOURCE(SkinResource);

    public:
        SkinResource();
        SkinResource( const std::string& name );

    public: // properties

        void setTexturePath( const std::string& value );
        const std::string& getTexturePath() const;

        void setTextureWidthMeters( float value );
        float getTextureWidthMeters() const;

        void setTextureHeightMeters( float value );
        float getTextureHeightMeters() const;

        void setColor( const osg::Vec4& value );
        const osg::Vec4& getColor() const;

    public:

        osg::StateSet* getStateSet();

    public: // ObjectWithProperties

        virtual void setProperty( const Property& prop );
        virtual Properties getProperties() const;

    protected:

        virtual ~SkinResource();

    private:
        std::string tex_path;
        float tex_width_m;
        float tex_height_m;
        osg::Vec4 color;
        osg::ref_ptr<osg::StateSet> state_set;

        void init();
    };
}

#endif // _OSGGIS_RESOURCE_H_
#ifndef _OSGGIS_DISPERSE_FILTER_H_
#define _OSGGIS_DISPERSE_FILTER_H_ 1

#include <osgGIS/Common>
#include <osgGIS/Filter>
#include <osgGIS/Feature>
#include <osg/Drawable>
#include <osg/Node>

namespace osgGIS
{
    /**
     * A filter that disperses feature/drawable/node collections back into
     * individual units. The DisperseFilter is the opposite of the CollectionFilter.
     */
    class OSGGIS_EXPORT DisperseFilter : public Filter
    {
        OSGGIS_META_FILTER( DisperseFilter );  

    public:
        /**
         * Constructs a new disperse filter.
         */
        DisperseFilter();
    
    public:
        FilterState* newState();

    public:
        virtual ~DisperseFilter();
    };
}


#endif // _OSGGIS_DISPERSE_FILTER_H_
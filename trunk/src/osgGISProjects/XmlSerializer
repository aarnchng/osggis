#ifndef _OSGGISPROJECTS_XML_SERIALIZER_H_
#define _OSGGISPROJECTS_XML_SERIALIZER_H_ 1

#include <osgGISProjects/Common>
#include <osgGISProjects/Serializer>
#include <osgGISProjects/Project>
#include <osgGISProjects/XmlDOM>
#include <iostream>

using namespace osgGIS;

namespace osgGISProjects
{
    class OSGGISPROJECTS_EXPORT XmlSerializer : public Serializer
    {
    public:
        XmlSerializer();

        virtual ~XmlSerializer();
        
    public:
        
        virtual Document* load( std::istream& in );
        
        virtual Document* load( const std::string& uri );
        
        virtual void store( Document* doc, std::ostream& out );
        
        
        virtual Script* readScript( Document* doc );

        virtual Document* writeScript( Script* script );
        
        
        virtual Project* readProject( Document* doc );
        
        virtual Document* writeProject( Project* project );
    
        
    protected:
    
        Script* decodeScript( XmlElement*, Project* );
        Source* decodeSource( XmlElement*, Project* );
        Terrain* decodeTerrain( XmlElement*, Project* );
        BuildTarget* decodeTarget( XmlElement*, Project* );
        BuildLayer* decodeLayer( XmlElement*, Project* );
        BuildLayerSlice* decodeSlice( XmlElement*, Project* );
        Project* decodeProject( XmlElement* );
        
        XmlElement* encodeScript( Script* );
        XmlElement* encodeProject( Project* );
    };
}

#endif // _OSGGISPROJECTS_XML_SCRIPT_SERIALIZER_H_